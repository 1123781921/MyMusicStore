@model  IEnumerable<MusicStoreEntity.Cart> 
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2 class="glyphicon glyphicon-shopping-cart">购物车</h2>


<table class="table table-hover">
    <thead>
        <tr>
            <th>名称</th>
            <th>价格</th>
            <th>数量</th>
            <th>编辑</th>
        </tr>
    </thead>
    @foreach(var item in Model)
    {
        <tbody>
            <tr>
                <th>@item.Album.Title</th>
                <th>@item.Album.Price</th>
                <th>@item.Count</th>
                <th><a class="glyphicon glyphicon-remove" style="color:black; cursor:pointer;"><span>删除</span></a></th>
            </tr>
        </tbody>
    }

</table>