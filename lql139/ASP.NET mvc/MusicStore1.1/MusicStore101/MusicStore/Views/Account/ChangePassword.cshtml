@using MusicStore.ViewModels
@model MusicStore.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h3 class="zhuche">
            欢迎来到Number One in the Universe 音乐商店<br /><br />
            我们虽然不是音乐的生产者，<br /><br />
            但我们是音乐最好的搬运工。
        </h3>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default login login-pane" style="height:460px;">
            <div class="panel-body">
                修改密码
            </div>
            <div class="panel-footer login-pane">
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                {
                    @Html.ValidationSummary(true,"密码修改失败，请坚持输入是否有误！" )      

                    @Html.PasswordFor(x => x.ConfirmPassWord, new { placeholder = "需要修改的密码", @class = "form-control  icon user" })<a href="#" class="glyphicon glyphicon-lock anniu"></a>
                    <br />
                    @Html.ValidationMessageFor(x => x.ConfirmPassWord)
                    <br />

                    @Html.PasswordFor(x => x.PassWord, new { placeholder = "新密码", @class = "form-control  icon user" })<a href="#" class="glyphicon glyphicon-lock anniu"></a>
                    <br />
                    @Html.ValidationMessageFor(x => x.PassWord)
                    <br />

                    @Html.PasswordFor(x => x.NewPassWord, new { placeholder = "确认新密码", @class = "form-control" })<a href="#" class="glyphicon glyphicon-lock anniu"></a>
                    <br />
                    @Html.ValidationMessageFor(x => x.NewPassWord)

                    <br />
                    <button type="submit" class="btn btn-primary">确认</button>

                    <a href="@Url.Action("index", "Home")"> <button type="button" class="btn btn-danger">返回</button></a>
                }
            </div>
        </div>
    </div>

</div>


